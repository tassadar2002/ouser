    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/image_portrait"
        style="@style/ListMiddlePortrait"
        android:src="@drawable/default_photo" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_marginLeft="4dp"
        style="@style/ListLargeText" />

</LinearLayout>