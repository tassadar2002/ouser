<!-- 搜索友约 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <include 
        android:id="@+id/layout_head_bar"
        layout="@layout/layout_head_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="6dp"
        style="@style/EditText" >
        
	        <com.ouser.ui.widget.AppointEditText
	            android:id="@+id/edit_keyword"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:layout_gravity="center_vertical"
	            android:imeOptions="actionSearch"
	            android:background="@null"
	            android:textSize="18sp"/>
	        <Button
	            android:id="@+id/btn_search_action"
	            android:layout_width="wrap_content"
	            android:layout_height="35dp"
	            android:layout_margin="3dp"
	            android:layout_gravity="center_vertical"
	            android:paddingLeft="6dp"
	            android:paddingRight="6dp"
	            android:background="@color/main"
	            android:textSize="16sp"
	            android:textColor="#FFF"
	            android:text="搜索" />

    </LinearLayout>
    
	<include layout="@layout/layout_separation"/>

    <FrameLayout
        android:id="@+id/layout_search_appoint_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>